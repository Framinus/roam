<%-include ../partials/header.ejs %>
<%-include ../partials/nav.ejs %>

<div class="city-image city-image-ny">
</div>
<div class="city-info">
  <h3 class="city-title">New York City</h3>
  <p class="city-blurb">New York is the largest city in the United States with over eight million residents, and also one of the world's premier tourist destinations. Most people are familiar with Manhattan's skyscrapers, but saavy travelers will also cross one of the city's many iconic bridges to visit Brooklyn and Queens, or take the free ferry past the Statue of Liberty to Staten Island.</p>
  <div class="new-review-link">
    <a href="/reviews/newreview/2">
      <button type="button" id="create-post-btn">New Review</button>
    </a>
  </div>
</div>
<% reviews.forEach((review) => { %>
<div class="posts">
  <div class="post-mini-profile">
    <img class="mini-image" height="100" width="100" src= '<%= review.image_url %>' >
    <p class="mini-username"><%= review.name %></p>
  </div>
  <div class="post-content">
    <h5> <%= review.title %> </h5>
    <p> <%= review.content %> </p>
  </div>
</div>
<%  }) %>

<%-include ../partials/footer.ejs %>
