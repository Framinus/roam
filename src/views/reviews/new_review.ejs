<%-include ../partials/header.ejs %>
<%-include ../partials/nav.ejs %>

<div class="review-prompt">
  <h3 class="new-review-prompt">Share your Knowledge</h3>
  <div>
    <p>Write a review for <%= cityName.name %>! </p>
  </div>
  <p class="review-prompt-paragraph">How did you spend your time here? What would you have wanted to know before you arrived? Any places to avoid? Make Roam travellers the saviest folks around!</p>
</div>
<div class="review-form-container">
  <form class="new-review-form" action="/reviews/newreview" method="POST">
    <input type="hidden" name="cityId" value="<%= cityName.id %>">
    <label>Enter a snappy title</label>
    <input class="review review-title" type="text" name="title" required>
    <label>Speak your mind!</label>
    <textarea class="review review-content" type="text" name="content" required></textarea>
    <input type="hidden" name="userId" value="<%= userId %>">
    <button class="new-review-submit-btn" type="submit" action="/" method="POST">Post Your Review!</button>
  </form>
</div>

<%-include ../partials/footer.ejs %>
